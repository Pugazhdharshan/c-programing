#include <stdio.h>

int main() {
  int num1, num2;
  int *ptr1, *ptr2;

  printf("Input the first number: ");
  scanf("%d", &num1);

  printf("Input the second number: ");
  scanf("%d", &num2);

  ptr1 = &num1;
  ptr2 = &num2;

  int sum = *ptr1 + *ptr2;
  printf("Sum of %d and %d = %d\n", *ptr1, *ptr2, sum);

  return 0;
}
